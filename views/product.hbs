<div class="row">
  <div class="col-md-6 px-1">
    <h3 class="my-2">{{product.title}}</h3>
    <p>{{product.description}}</p>

    <div class="my-2 text-body-secondary">
      <div class="d-flex justify-content-between align-items-center">
        <div class="d-flex gap-2 align-items-center">
          <div class="avatar bg-primary">
            <p>{{getFullNameFirstCharaqter product.user.firstName product.user.lastName}}</p>
          </div>
          <p class="p-0 m-0" style="text-transform:capitalize;">{{product.user.firstName}} {{product.user.lastName}}</p>
        </div>
        <small class="text-muted fs-5">{{product.price}}.00$</small>
      </div>
      <p class="text-secondary mt-2">{{formatDate product.createdAt}}</p>
    </div>
  </div>
  <div class="col-md-6">
    <img src="{{product.image}}" width="100%">
  </div>
</div>